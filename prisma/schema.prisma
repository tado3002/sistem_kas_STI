generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Dosen {
  id       Int    @id @default(autoincrement())
  matkul   String @unique
  name     String
  phone    String
  whatsapp String
}

model User {
  id            Int       @id @default(autoincrement())
  usernameByNIM Int       @unique
  password      String
  name          String
  role          Role      @default(user)
  mahasiswa     Mahasiswa @relation(fields: [usernameByNIM, name], references: [NIM, name])
  createdAt     DateTime  @default(now())
  updateAt      DateTime  @updatedAt

  @@unique([usernameByNIM, name])
}

enum Role {
  user
  admin
}

model Mahasiswa {
  NIM   Int    @unique
  name  String
  phone String

  transaksi Transaksi[]
  User      User?

  @@id([NIM, name])
}

model Transaksi {
  id            Int       @id @default(autoincrement())
  NIM_mahasiswa Int
  mahasiswa     Mahasiswa @relation(fields: [NIM_mahasiswa], references: [NIM])
  nominal       BigInt
  type          String //'pemasukan' atau 'pengeluaran'
  tanggal       DateTime  @default(now())
  deskripsi     String?
}
