generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["relationJoins"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Dosen {
  id       Int    @id @default(autoincrement())
  matkul   String @unique
  name     String
  phone    String
  whatsapp String
  Task     Task[]
}

model Task {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  deadline    DateTime
  dosen       Dosen    @relation(fields: [dosenId], references: [id])
  dosenId     Int
  createdAt   DateTime @default(now())
}

model User {
  id            Int       @id @default(autoincrement())
  usernameByNIM Int       @unique
  password      String
  name          String
  role          Role      @default(user)
  mahasiswa     Mahasiswa @relation(fields: [usernameByNIM, name], references: [NIM, name])
  createdAt     DateTime  @default(now())
  updateAt      DateTime  @updatedAt

  @@unique([usernameByNIM, name])
}

enum Role {
  user
  admin
}

model Mahasiswa {
  NIM   Int    @unique
  name  String
  phone String

  transaksi Transaksi[]
  User      User?

  @@id([NIM, name])
}

enum TransactionType {
  pemasukan
  pengeluaran
}

model Transaksi {
  id            Int             @id @default(autoincrement())
  nama          String
  NIM_mahasiswa Int
  mahasiswa     Mahasiswa       @relation(fields: [NIM_mahasiswa, nama], references: [NIM, name])
  nominal       BigInt
  type          TransactionType //'pemasukan' atau 'pengeluaran'
  tanggal       DateTime        @default(now())
  deskripsi     String?
}
